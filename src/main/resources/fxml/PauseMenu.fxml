<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bomberman.bomberman.PauseMenuController">
   <children>
      <!-- Fond semi-transparent -->
      <Pane prefHeight="956.0" prefWidth="816.0" style="-fx-background-color: rgba(0, 0, 0, 0.6);" />
      
      <!-- Menu de pause -->
      <VBox alignment="CENTER" maxHeight="350.0" maxWidth="450.0" spacing="20.0" styleClass="pause-menu-container">
         <children>
            <!-- Titre PAUSE -->
            <Label fx:id="pauseTitle" styleClass="pause-title" text="PAUSE" />
            
            <!-- Options du menu -->
            <VBox fx:id="optionsContainer" alignment="CENTER" spacing="15.0" styleClass="options-container">
               <children>
                  <HBox fx:id="resumeContainer" alignment="CENTER" spacing="10.0">
                     <children>
                        <Label fx:id="resumeArrow" styleClass="menu-arrow" text="►" visible="true" />
                        <Button fx:id="resumeButton" mnemonicParsing="false" onAction="#resumeGame" styleClass="pause-button" text="REPRENDRE" />
                     </children>
                  </HBox>
                  <HBox fx:id="restartContainer" alignment="CENTER" spacing="10.0">
                     <children>
                        <Label fx:id="restartArrow" styleClass="menu-arrow" text="►" visible="false" />
                        <Button fx:id="restartButton" mnemonicParsing="false" onAction="#restartGame" styleClass="pause-button" text="RECOMMENCER" />
                     </children>
                  </HBox>
                  <HBox fx:id="commandsContainer" alignment="CENTER" spacing="10.0">
                     <children>
                        <Label fx:id="commandsArrow" styleClass="menu-arrow" text="►" visible="false" />
                        <Button fx:id="commandsButton" mnemonicParsing="false" onAction="#showCommands" styleClass="pause-button" text="COMMANDES" />
                     </children>
                  </HBox>
                  <HBox fx:id="mainMenuContainer" alignment="CENTER" spacing="10.0">
                     <children>
                        <Label fx:id="mainMenuArrow" styleClass="menu-arrow" text="►" visible="false" />
                        <Button fx:id="mainMenuButton" mnemonicParsing="false" onAction="#returnToMainMenu" styleClass="pause-button" text="RETOUR AU MENU PRINCIPAL" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane> 