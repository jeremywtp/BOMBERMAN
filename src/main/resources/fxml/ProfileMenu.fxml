<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bomberman.bomberman.ProfileMenuController">
   <children>
      <!-- Image de fond -->
      <ImageView fx:id="backgroundImage" fitHeight="956.0" fitWidth="816.0" pickOnBounds="true" preserveRatio="false" />
      
      <!-- Overlay semi-transparent -->
      <Pane prefHeight="956.0" prefWidth="816.0" style="-fx-background-color: rgba(0, 0, 0, 0.7);" />
      
      <!-- Contenu principal -->
      <VBox alignment="CENTER" spacing="20.0" styleClass="profile-menu-container">
         <children>
            <!-- Titre -->
            <Label fx:id="titleLabel" styleClass="game-title" text="GESTION DES PROFILS" />
            
            <!-- Statistiques globales -->
            <Label fx:id="globalStatsLabel" styleClass="global-stats" text="Aucun profil enregistré" />
            
            <!-- Section profil actuel -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="current-player-section">
               <children>
                  <Label styleClass="section-title" text="JOUEUR ACTUEL" />
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <ImageView fx:id="currentPlayerAvatar" fitHeight="64.0" fitWidth="64.0" preserveRatio="true" />
                        <VBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label fx:id="currentPlayerName" styleClass="player-name" text="Aucun joueur sélectionné" />
                              <Label fx:id="currentPlayerStats" styleClass="player-stats" text="" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Liste des profils -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="profiles-section">
               <children>
                  <Label styleClass="section-title" text="PROFILS DISPONIBLES" />
                  <ScrollPane fx:id="profilesScrollPane" fitToWidth="true" maxHeight="200.0" minHeight="200.0" prefHeight="200.0" styleClass="profiles-scroll">
                     <content>
                        <ListView fx:id="profilesList" styleClass="profiles-list" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            
            <!-- Boutons d'action -->
            <HBox alignment="CENTER" spacing="20.0" styleClass="action-buttons">
               <children>
                  <Button fx:id="selectProfileButton" mnemonicParsing="false" onAction="#selectProfile" styleClass="action-button" text="SÉLECTIONNER" />
                  <Button fx:id="createProfileButton" mnemonicParsing="false" onAction="#createProfile" styleClass="action-button" text="CRÉER PROFIL" />
                  <Button fx:id="editProfileButton" mnemonicParsing="false" onAction="#editProfile" styleClass="action-button" text="MODIFIER" />
                  <Button fx:id="deleteProfileButton" mnemonicParsing="false" onAction="#deleteProfile" styleClass="action-button-danger" text="SUPPRIMER" />
               </children>
            </HBox>
            
            <!-- Bouton retour -->
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBack" styleClass="back-button" text="RETOUR AU MENU" />
            
            <!-- Instructions -->
            <Label fx:id="instructionsLabel" styleClass="instructions" text="Sélectionnez un profil pour jouer ou créez-en un nouveau" />
         </children>
      </VBox>
      
      <!-- Dialog de création/modification de profil -->
      <VBox fx:id="profileDialog" alignment="CENTER" spacing="20.0" styleClass="profile-dialog" visible="false">
         <children>
            <Pane prefHeight="956.0" prefWidth="816.0" style="-fx-background-color: rgba(0, 0, 0, 0.8);" />
            <VBox alignment="CENTER" spacing="15.0" styleClass="dialog-content">
               <children>
                  <Label fx:id="dialogTitle" styleClass="dialog-title" text="CRÉER UN PROFIL" />
                  
                  <GridPane hgap="10.0" vgap="10.0" styleClass="form-grid">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label styleClass="form-label" text="Prénom :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="firstNameField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label styleClass="form-label" text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="lastNameField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label styleClass="form-label" text="Avatar :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <children>
                              <ComboBox fx:id="avatarComboBox" styleClass="form-field" />
                              <ImageView fx:id="avatarPreview" fitHeight="32.0" fitWidth="32.0" preserveRatio="true" />
                           </children>
                        </HBox>
                     </children>
                  </GridPane>
                  
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button fx:id="saveProfileButton" mnemonicParsing="false" onAction="#saveProfile" styleClass="action-button" text="SAUVEGARDER" />
                        <Button fx:id="cancelProfileButton" mnemonicParsing="false" onAction="#cancelProfile" styleClass="action-button" text="ANNULER" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
